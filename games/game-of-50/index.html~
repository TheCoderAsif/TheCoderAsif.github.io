    <script type="text/javascript">
    var clicked=0,r1=0,r2=0,r3=0,r4=0;
    var name;
      function button1clicked(){
        if(clicked<40){
          var val=document.getElementById('pb1');
          var num=Math.floor(Math.random() * 10);
          if(num%2!=0) val.value=val.value+10;
          else val.value=val.value-10;
          clicked+=1;
          if(clicked==10){
            var val=document.getElementById('pb1');
            if(val.value==50){
              alert("~Succeed~");
              r1=1;
            }
            else alert("~Failed~");
            val.value=50;
            if(r1==1) document.getElementById('cs1').innerHTML="1st Case: Succeed";
            else document.getElementById('cs1').innerHTML="1st Case: Failed";
          }
          if(clicked==20){
            var val=document.getElementById('pb1');
            if(val.value==50){
              alert("~Succeed~");
              r2=1;
            }
            else alert("~Failed~");
            val.value=50;
            if(r2==1) document.getElementById('cs2').innerHTML="2nd Case: Succeed";
            else document.getElementById('cs2').innerHTML="2nd Case: Failed";
          }
          if(clicked==30){
            var val=document.getElementById('pb1');
            if(val.value==50){
              alert("~Succeed~");
              r3=1;
            }
            else alert("~Failed~");
            val.value=50;
            if(r3==1) document.getElementById('cs3').innerHTML="3rd Case: Succeed";
            else document.getElementById('cs3').innerHTML="3rd Case: Failed";
          }
          if(clicked==40){
            var val=document.getElementById('pb1');
            if(val.value==50){
              alert("~Succeed~");
              r4=1;
            }
            else alert("~Failed~");
            val.value=50;
            if(r4==1) document.getElementById('cs4').innerHTML="4th Case: Succeed";
            else document.getElementById('cs4').innerHTML="4th Case: Failed";
            if(r1+r2+r3+r4==2){
              alert("~Succeed~");
              document.getElementById('hd').innerHTML="~Succeed~";
              name=prompt("Enter Your Name:");
              
            }
            else{
              alert("~Failed~");
              document.getElementById('hd').innerHTML="~Failed~";
            }
          }
        }
        else{
          if(r1+r2+r3+r4==2){
            alert("~Succeed~");
            document.getElementById('hd').innerHTML="~Succeed~";
            name=prompt("Enter Your Name:");
          }
          else{
            alert("~Failed~");
            document.getElementById('hd').innerHTML="~Failed~";
          }
        }
      }
